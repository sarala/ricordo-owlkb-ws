<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="employeeDS" class="ricordo.owlkb.rest.service.EmployeeDS" />

    <bean id="configProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>config.properties</value>
            </list>
        </property>
    </bean>
    
    <bean id="owlKbService" class="ricordo.owlkb.rest.service.OwlKbService">
        <property name="serverPort" value="${owllink.server.port}"/>
        <property name="serverUrl" value="${owllink.server.url}"/>
        <property name="kbNs" value="${kb.ns}"/>
        <property name="docIRI" value="${kb.file}"/>
    </bean>

</beans>